<Page x:Class="WpfAppAutorisation.Pages.PasswordChange"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppAutorisation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PasswordChange">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbcode" HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" Grid.Column="1"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,44,0,0" TextWrapping="Wrap" Text="Enter your code" VerticalAlignment="Top" RenderTransformOrigin="0.548,1.081"/>
        <Button x:Name="receive" Visibility="Visible" Grid.Column="1" Content="receive code" HorizontalAlignment="Center" Margin="0,139,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock x:Name="newpass" Visibility="Hidden" Grid.Column="1" HorizontalAlignment="Left" Margin="10,212,0,0" TextWrapping="Wrap" Text="New password" VerticalAlignment="Top"/>
        <TextBox x:Name="tbnewpass" Visibility="Hidden" Grid.Column="1" HorizontalAlignment="Center" Margin="0,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260"/>
        <TextBlock x:Name="repeat" Visibility="Hidden" Grid.Column="1" HorizontalAlignment="Left" Margin="10,273,0,0" TextWrapping="Wrap" Text="Enter password agan" VerticalAlignment="Top"/>
        <TextBox Visibility="Hidden" x:Name="tbrepeatpass" Grid.Column="1" HorizontalAlignment="Center" Margin="0,295,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260"/>
        <Button x:Name="tbcomfim" Visibility="Hidden" Content="Comfim" Grid.Column="1" Margin="80,344,80,68" Click="tbcomfim_Click"/>
        <Button x:Name="btcom" Visibility="Hidden" Grid.Column="1" Content="comfim" HorizontalAlignment="Center" Margin="0,139,0,0" VerticalAlignment="Top" Click="btcom_Click" />



    </Grid>
</Page>
